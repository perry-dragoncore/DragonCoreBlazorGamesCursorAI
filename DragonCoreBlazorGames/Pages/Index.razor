@page "/"
@inject NavigationManager NavigationManager

<div class="games-container">
    <h1>Dragon Games Collection</h1>
    
    @foreach (var category in games.Select(g => g.Category).Distinct())
    {
        <h2 class="category-title">@category</h2>
        <div class="games-grid">
            @foreach (var game in games.Where(g => g.Category == category))
            {
                <div class="game-tile" @onclick="@(() => NavigateToGame(game.Route))" data-category="@game.Category">
                    <div class="game-icon">
                        <i class="@game.Icon"></i>
                    </div>
                    <h3>@game.Name</h3>
                    <p>@game.Description</p>
                </div>
            }
        </div>
    }
</div>

<style>
    .games-container {
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .games-container h1 {
        text-align: center;
        color: #2c3e50;
        margin-bottom: 40px;
        font-size: 2.5em;
    }

    .category-title {
        width: 100%;
        text-align: left;
        color: #2c3e50;
        margin: 40px 0 20px 0;
        font-size: 2em;
        padding-bottom: 10px;
        position: relative;
    }

    /* Category-specific title borders */
    [data-category="Classic Games"] + .games-grid .category-title {
        border-bottom: 2px solid #3498db;
    }

    [data-category="Puzzle Games"] + .games-grid .category-title {
        border-bottom: 2px solid #9b59b6;
    }

    [data-category="Action Games"] + .games-grid .category-title {
        border-bottom: 2px solid #e74c3c;
    }

    [data-category="Board Games"] + .games-grid .category-title {
        border-bottom: 2px solid #2ecc71;
    }

    .games-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        padding: 20px;
        width: 100%;
    }

    .game-tile {
        background: white;
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
        position: relative;
        overflow: hidden;
    }

    .game-tile::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        transition: all 0.3s ease;
    }

    /* Category-specific gradients */
    [data-category="Classic Games"]::before {
        background: linear-gradient(90deg, #3498db, #2980b9);
    }

    [data-category="Puzzle Games"]::before {
        background: linear-gradient(90deg, #9b59b6, #8e44ad);
    }

    [data-category="Action Games"]::before {
        background: linear-gradient(90deg, #e74c3c, #c0392b);
    }

    [data-category="Board Games"]::before {
        background: linear-gradient(90deg, #2ecc71, #27ae60);
    }

    .game-tile:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 15px rgba(0,0,0,0.2);
    }

    .game-tile:hover::before {
        height: 100%;
        opacity: 0.1;
    }

    .game-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 10px;
        position: relative;
        z-index: 1;
        transition: all 0.3s ease;
    }

    /* Category-specific icon backgrounds */
    [data-category="Classic Games"] .game-icon {
        background: linear-gradient(135deg, #3498db, #2980b9);
    }

    [data-category="Puzzle Games"] .game-icon {
        background: linear-gradient(135deg, #9b59b6, #8e44ad);
    }

    [data-category="Action Games"] .game-icon {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
    }

    [data-category="Board Games"] .game-icon {
        background: linear-gradient(135deg, #2ecc71, #27ae60);
    }

    .game-tile:hover .game-icon {
        transform: scale(1.1) rotate(5deg);
    }

    .game-icon i {
        font-size: 40px;
        color: white;
        filter: drop-shadow(0 2px 4px rgba(0,0,0,0.2));
    }

    .game-tile h2 {
        color: #2c3e50;
        margin: 0;
        font-size: 1.5em;
    }

    .game-tile p {
        color: #666;
        margin: 0;
        font-size: 0.9em;
        line-height: 1.4;
    }

    @@media (max-width: 768px) {
        .games-grid {
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        }
    }
</style>

